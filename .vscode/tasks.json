{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker:docker buildx bake",
      "hide": false,
      "command": "docker",
      "args": [
        "buildx",
        "bake",
        "--no-cache",
        "--debug",
        "--allow=security.insecure",
        "--progress=plain",
        "${input:buildx-target}",
      ],
      "options": {
        "cwd": "${workspaceFolder}/.devcontainer/talos"
      },
      "problemMatcher": [],
      "presentation": {
        "close": true,
        "echo": false,
        "reveal": "never",
        "group": "docker:bake",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "revealProblems": "never",
        "clear": true,
      },
    },
